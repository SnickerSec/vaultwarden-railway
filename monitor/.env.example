# Vaultwarden Backup Monitor Configuration

# Admin password for backup/restore operations
# Generate with: python -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('your-password'))"
MONITOR_PASSWORD_HASH=scrypt:32768:8:1$...your-hash-here...

# Secret key for session management (generate with: python -c "import os; print(os.urandom(32).hex())")
MONITOR_SECRET_KEY=your-secret-key-here

# Server configuration
MONITOR_PORT=5000
MONITOR_DEBUG=false

# Directory paths (relative to monitor directory)
BACKUP_DIR=../backups
RESTORE_LOG_DIR=../restore-logs
VERIFICATION_LOG_DIR=../verification-logs
SCRIPTS_DIR=../scripts

# Railway configuration (if running on Railway)
DATABASE_URL=${DATABASE_URL}
